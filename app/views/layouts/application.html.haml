%html
  %head
    %meta{ :charset => "utf-8" }
    -# Set the viewport width to device width for mobile
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    %title= "Basic Black Home - #{yield :title if content_for? :title}"
    = stylesheet_link_tag 'pages/pages'
    %link{href:'http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400italic,600,600italic,300,300italic|Josefin+Sans:400,700,600,400italic,600italic,700italic', type: 'text/css', rel:'stylesheet'}
    = javascript_include_tag "store/all"
    = javascript_include_tag 'store/template'
    = javascript_include_tag "vendor/custom.modernizr"
    = yield :head if content_for? :head
    = csrf_meta_tags

  %body.container
    %header.mainHead
      .row
        .sixteen.columns
          #logo
            =image_tag('logo.png')
            %h4 Basic Black Home
          %nav#mainNav
            =render partial: 'shared/nav'
    #wrapper.row
      = content_for?(:content) ? yield(:content) : yield
    %footer#mainFoot
      #footContact.row
        .eight.columns.alpha
          %p 1140 S. La Brea Ave. Los Angeles, CA 90019
          %a{href: 'mailto:kingchairguy@gmail.com'} kingchairguy@gmail.com <br/>
          %a{href:'tel+3109851886'} 310.985.1886
        .eight.columns.omega.textRight
          %h1 King Chair Guy - Los Angeles
      .lineTop
        %nav#footNav.row
          %ul
            %li
              %p &copy; 2013 Basic Black Home. All rights reserved.
            %li
              %a{href:'#'} Terms & Conditions
            %li
              %a{href:'#'} Contact
            %li
              %p Site by
            %li
              %a{href:'mailto:info@edgdesign.com'} Edg Design

    = yield :scripts if content_for? :scripts
    %script{type:'text/javascript', src: 'https://raw.github.com/ryhan/fixie/master/fixie_min.js'}
